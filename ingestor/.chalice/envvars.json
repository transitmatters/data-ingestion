            "DD_VERSION": { "Ref": "GitVersion" },
            "DD_TAGS": { "Ref": "DDTags" }
          }
        }
      }
    },
    "StoreNewTrainRuns": {
      "Properties": {
        "Environment": {
          "Variables": {
            "MBTA_V2_API_KEY": { "Ref": "MbtaV2ApiKey" },
            "DD_API_KEY": { "Ref": "DDApiKey" },
            "DD_VERSION": { "Ref": "GitVersion" },
            "DD_TAGS": { "Ref": "DDTags" }
          }
        }
      }
    }
  }
